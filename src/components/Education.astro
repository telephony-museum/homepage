const programIcons = ["history", "camera", "globe", "heart", "zap", "building", "star", "signal", "coin", "child", "video", "link"];
---

<section id="education" class="max-w-7xl mx-auto px-6">
  <div class="text-center max-w-2xl mx-auto mb-12 sm:mb-20">
    <h3 class="text-sm font-bold uppercase tracking-[0.3em] text-accent mb-4">{t.education.label}</h3>
    <h2 class="text-3xl sm:text-4xl md:text-6xl font-black mb-4 sm:mb-6">{t.education.title}</h2>
    <p class="text-gray-400">{t.education.description}</p>
  </div>

  <div class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 sm:gap-6">
    {t.education.programs.map((program, i) => (
      <div class="group p-4 sm:p-6 md:p-8 bg-white/[0.02] border border-white/5 rounded-2xl hover:bg-white/[0.04] hover:border-accent/30 transition-all">
        <div class="w-10 h-10 sm:w-12 sm:h-12 bg-accent/10 rounded-xl flex items-center justify-center text-accent mb-4 sm:mb-6 group-hover:scale-110 group-hover:bg-accent group-hover:text-dark-bg transition-all">
          <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths[programIcons[i]] || iconPaths.star} />
          </svg>
        </div>
        <span class="inline-block px-3 py-1 rounded-full bg-white/5 text-[10px] uppercase font-black tracking-widest text-accent mb-4">{program.grades}</span>
        <h4 class="text-sm sm:text-lg font-bold mb-2 sm:mb-3 leading-snug">{program.title}</h4>
        <p class="text-xs sm:text-sm text-gray-400 leading-relaxed hidden sm:block">{program.description}</p>
      </div>
    ))}
  </div>
</section>
