---
import type { Translation } from "../i18n/types";

interface Props { t: Translation; }
const { t } = Astro.props;
---

<section class="py-20 sm:py-32 bg-dark-surface">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center max-w-2xl mx-auto mb-12 sm:mb-20">
      <h3 class="text-sm font-bold uppercase tracking-[0.3em] text-accent mb-4">{t.about.label}</h3>
      <h2 class="text-3xl sm:text-4xl md:text-6xl font-black mb-4 sm:mb-6">{t.about.title}</h2>
    </div>

    <div class="grid md:grid-cols-2 gap-6 sm:gap-8 mb-12 sm:mb-16">
      <div class="p-6 sm:p-8 bg-dark-bg/50 border border-white/5 rounded-2xl">
        <div class="w-10 h-10 sm:w-12 sm:h-12 bg-accent/10 rounded-xl flex items-center justify-center text-accent mb-4 sm:mb-6">
          <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
        <h4 class="text-lg sm:text-xl font-bold mb-3">{t.about.visionTitle}</h4>
        <p class="text-sm sm:text-base text-gray-400 leading-relaxed">{t.about.vision}</p>
      </div>

      <div class="p-6 sm:p-8 bg-dark-bg/50 border border-white/5 rounded-2xl">
        <div class="w-10 h-10 sm:w-12 sm:h-12 bg-accent/10 rounded-xl flex items-center justify-center text-accent mb-4 sm:mb-6">
          <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
          </svg>
        </div>
        <h4 class="text-lg sm:text-xl font-bold mb-3">{t.about.missionTitle}</h4>
        <p class="text-sm sm:text-base text-gray-400 leading-relaxed">{t.about.mission}</p>
      </div>
    </div>

    <div class="mb-12 sm:mb-16">
      <h4 class="text-center text-sm font-bold uppercase tracking-[0.3em] text-accent mb-8">{t.about.valuesTitle}</h4>
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6">
        {t.about.values.map((value) => (
          <div class="p-4 sm:p-6 bg-dark-bg/50 border border-white/5 rounded-xl text-center">
            <p class="text-sm sm:text-base text-gray-300 leading-relaxed">{value}</p>
          </div>
        ))}
      </div>
    </div>

    <div class="max-w-3xl mx-auto text-center">
      <p class="text-gray-400 leading-relaxed mb-4">{t.about.foundingStory}</p>
      <p class="text-accent font-semibold text-lg">{t.about.invitation}</p>
    </div>
  </div>
</section>
