---
import { Image } from "astro:assets";
import type { Translation } from "../i18n/types";
import buildingImage from "../assets/images/historic-treasury-building-2023.jpg";

interface Props { t: Translation; }
const { t } = Astro.props;
const titleParts = t.building.title.split("\n");
---

<section class="py-20 sm:py-32 bg-dark-surface relative overflow-hidden">
  <div class="max-w-7xl mx-auto px-6 grid md:grid-cols-2 gap-8 md:gap-16 items-center">
    <div class="relative order-2 md:order-1">
      <div class="p-6 sm:p-8 border border-white/10 rounded-3xl bg-dark-bg/50 backdrop-blur-xl relative z-10">
        <h3 class="text-xl sm:text-2xl font-bold mb-4 sm:mb-6 flex items-center">
          <span class="w-10 h-10 rounded-full bg-accent flex items-center justify-center text-dark-bg mr-4 text-sm font-black">01</span>
          {t.building.cardTitle}
        </h3>
        <p class="text-gray-400 leading-relaxed mb-6">{t.building.cardDescription}</p>
        <ul class="space-y-4">
          {t.building.facts.map((item) => (
            <li class="flex items-start gap-3 text-sm">
              <div class="mt-1.5 w-1.5 h-1.5 rounded-full bg-accent shrink-0" />
              <span>{item}</span>
            </li>
          ))}
        </ul>
      </div>
      <div class="absolute -top-10 -right-10 w-40 h-40 sm:w-64 sm:h-64 border border-accent/10 rounded-full animate-pulse hidden sm:block"></div>
    </div>

    <div class="order-1 md:order-2 space-y-6 sm:space-y-8">
      <div>
        <h3 class="text-sm font-bold uppercase tracking-[0.3em] text-accent mb-4">{t.building.label}</h3>
        <h2 class="text-3xl sm:text-4xl md:text-6xl font-black mb-6 sm:mb-8 leading-tight">
          {titleParts.map((part, i) => (
            <Fragment>{i > 0 && <br />}{part}</Fragment>
          ))}
        </h2>
        <p class="text-gray-400 text-lg font-light leading-relaxed">{t.building.description}</p>
      </div>
      <div class="rounded-2xl overflow-hidden">
        <Image src={buildingImage} alt="Telephony Museum building in 2023" width={800} height={480} format="webp" quality={80} class="w-full h-auto" />
      </div>
    </div>
  </div>
</section>
