---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { languages, defaultLang } from "../../i18n/index";
import { siteConfig } from "../../data/site";

export function getStaticPaths() {
  return Object.keys(languages)
    .filter((code) => code !== defaultLang)
    .map((code) => ({ params: { lang: code } }));
}

const { lang } = Astro.params;
const t = languages[lang!];
const homeHref = `/${lang}/`;
const langPrefix = `/${lang}`;
---

<BaseLayout t={t} pageTitle={t.parama.meta.title} pageDescription={t.parama.meta.description}>
  <Header t={t} />
  <main class="pt-32 sm:pt-40 pb-20 sm:pb-32">
    <div class="max-w-7xl mx-auto px-6 mb-6">
      <a href={homeHref} class="inline-flex items-center gap-2 text-sm text-gray-500 hover:text-accent transition-colors">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" /></svg>
        {t.statute.backToHome}
      </a>
    </div>

    <section class="max-w-7xl mx-auto px-6">
      <div class="max-w-3xl mb-12 sm:mb-16">
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-black tracking-tight mb-6">{t.parama.heading}</h1>
        <p class="text-gray-400 leading-relaxed text-base sm:text-lg">{t.parama.description}</p>
      </div>

      <div class="grid md:grid-cols-3 gap-6 sm:gap-8 mb-16 sm:mb-20">
        <div class="bg-dark-card border border-white/5 rounded-2xl p-6 sm:p-8 flex flex-col">
          <div class="w-12 h-12 rounded-xl bg-accent/10 flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 0 0 2.625.372 9.337 9.337 0 0 0 4.121-.952 4.125 4.125 0 0 0-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 0 1 8.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0 1 11.964-3.07M12 6.375a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0Zm8.25 2.25a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z" /></svg>
          </div>
          <h2 class="text-lg sm:text-xl font-bold mb-3">{t.parama.volunteerTitle}</h2>
          <p class="text-gray-400 text-sm leading-relaxed mb-6 flex-1">{t.parama.volunteerDescription}</p>
          <a href={`mailto:${siteConfig.email}?subject=Volunteer`} class="inline-flex items-center gap-2 text-sm font-medium text-accent hover:text-accent-light transition-colors">
            {t.parama.ctaEmail} <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" /></svg>
          </a>
        </div>

        <div class="bg-dark-card border border-white/5 rounded-2xl p-6 sm:p-8 flex flex-col">
          <div class="w-12 h-12 rounded-xl bg-accent/10 flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M21 11.25v8.25a1.5 1.5 0 0 1-1.5 1.5H5.25a1.5 1.5 0 0 1-1.5-1.5v-8.25M12 4.875A2.625 2.625 0 1 0 9.375 7.5H12m0-2.625V7.5m0-2.625A2.625 2.625 0 1 1 14.625 7.5H12m0 0V21m-8.625-9.75h18c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125h-18c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125Z" /></svg>
          </div>
          <h2 class="text-lg sm:text-xl font-bold mb-3">{t.parama.donateTitle}</h2>
          <p class="text-gray-400 text-sm leading-relaxed mb-6 flex-1">{t.parama.donateDescription}</p>
          <a href={`mailto:${siteConfig.email}?subject=Donate Exhibits`} class="inline-flex items-center gap-2 text-sm font-medium text-accent hover:text-accent-light transition-colors">
            {t.parama.ctaEmail} <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" /></svg>
          </a>
        </div>

        <div class="bg-dark-card border border-white/5 rounded-2xl p-6 sm:p-8 flex flex-col">
          <div class="w-12 h-12 rounded-xl bg-accent/10 flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" /></svg>
          </div>
          <h2 class="text-lg sm:text-xl font-bold mb-3">{t.parama.sponsorTitle}</h2>
          <p class="text-gray-400 text-sm leading-relaxed mb-6 flex-1">{t.parama.sponsorDescription}</p>
          <a href={`mailto:${siteConfig.email}?subject=Sponsorship`} class="inline-flex items-center gap-2 text-sm font-medium text-accent hover:text-accent-light transition-colors">
            {t.parama.ctaEmail} <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" /></svg>
          </a>
        </div>
      </div>

      <div class="max-w-xl bg-dark-card border border-white/5 rounded-2xl p-6 sm:p-8">
        <h2 class="text-lg sm:text-xl font-bold mb-2">{t.parama.bankTitle}</h2>
        <p class="text-gray-400 text-sm mb-6">{t.parama.bankDescription}</p>
        <div class="space-y-4 text-sm">
          <div>
            <p class="text-[10px] uppercase tracking-widest text-gray-600 font-bold mb-1">{t.footer.entityCodeLabel}</p>
            <p class="text-gray-300">{siteConfig.museumCode}</p>
          </div>
          <div>
            <p class="text-[10px] uppercase tracking-widest text-gray-600 font-bold mb-1">{t.footer.bankAccountLabel}</p>
            <p class="text-gray-300 font-mono">{siteConfig.bankAccount}</p>
          </div>
          <div>
            <p class="text-[10px] uppercase tracking-widest text-gray-600 font-bold mb-1">{t.footer.bankName}</p>
            <p class="text-gray-300">{siteConfig.bankName}</p>
          </div>
        </div>
      </div>
    </section>

    <div class="max-w-7xl mx-auto px-6 mt-12 flex flex-wrap gap-4">
      <a href={`${langPrefix}/exposition/`} class="inline-flex items-center gap-2 text-sm font-medium text-accent hover:text-accent-light transition-colors">
        {t.nav.exposition} &rarr;
      </a>
      <a href={`${langPrefix}/contacts/`} class="inline-flex items-center gap-2 text-sm font-medium text-accent hover:text-accent-light transition-colors">
        {t.nav.visit} &rarr;
      </a>
    </div>
  </main>
  <Footer t={t} />
</BaseLayout>
