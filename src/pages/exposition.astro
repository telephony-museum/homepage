---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Exposition from "../components/Exposition.astro";
import Footer from "../components/Footer.astro";
import { en } from "../i18n/en";

const t = en;
---

<BaseLayout t={t} pageTitle={t.exposition.meta.title} pageDescription={t.exposition.meta.description}>
  <Header t={t} />
  <main class="pt-32 sm:pt-40 pb-20 sm:pb-32">
    <div class="max-w-7xl mx-auto px-6 mb-6">
      <a href="/" class="inline-flex items-center gap-2 text-sm text-gray-500 hover:text-accent transition-colors">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" /></svg>
        {t.statute.backToHome}
      </a>
    </div>
    <Exposition t={t} />
    <div class="max-w-7xl mx-auto px-6 mt-12 flex flex-wrap gap-4">
      <a href="/education/" class="inline-flex items-center gap-2 text-sm font-medium text-accent hover:text-accent-light transition-colors">
        {t.nav.education} &rarr;
      </a>
      <a href="/prices/" class="inline-flex items-center gap-2 text-sm font-medium text-accent hover:text-accent-light transition-colors">
        {t.nav.prices} &rarr;
      </a>
    </div>
  </main>
  <Footer t={t} />
</BaseLayout>
